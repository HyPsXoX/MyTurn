<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Results - Test Bank System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar.navbar-expand-lg.navbar-dark {
            background: linear-gradient(135deg, #001a8f 0%, #d4cc26 100%) !important;
        }
        .sidebar {
            min-height: calc(100vh - 56px);
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .nav-link {
            color: #333;
            padding: 10px 15px;
            margin: 2px 0;
        }
        .nav-link:hover, .nav-link.active {
            background-color: #007bff;
            color: white;
            border-radius: 5px;
        }
        .score-circle {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 24px;
            margin: 0 auto;
        }
        .question-card.correct {
            border-left: 4px solid #28a745;
        }
        .question-card.incorrect {
            border-left: 4px solid #dc3545;
        }
        .correct-answer {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
        }
        .user-answer.correct {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
        }
        .user-answer.incorrect {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
        }
    </style>
</head>
<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/student/dashboard">
                <i class="fas fa-graduation-cap me-2"></i>Test Bank System
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    Welcome, <%= user.fullName %> (Student)
                </span>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/student/dashboard">
                                <i class="fas fa-home me-2"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/student/groups">
                                <i class="fas fa-users me-2"></i>Groups
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                <i class="fas fa-chart-line me-2"></i>Test Results
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <!-- Test Header -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h2><%= test.title %> - Results</h2>
                                        <p class="text-muted mb-1"><strong>Subject:</strong> <%= test.subjectCode %></p>
                                        <p class="text-muted mb-1"><strong>Created by:</strong> <%= test.createdBy?.fullName || 'Unknown' %></p>
                                        <p class="text-muted mb-0"><strong>Date Taken:</strong> <%= new Date(attempt.takenAt).toLocaleDateString('en-US', { 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric' 
                                        }) %></p>
                                        <p class="text-muted mb-0"><strong>Time Taken:</strong> <%= new Date(attempt.takenAt).toLocaleTimeString('en-US') %></p>
                                    </div>
                                    <div class="col-md-4 text-center">
                                        <!-- Dynamic Score Circle -->
                                        <div class="score-circle" style="background: conic-gradient(
                                            #28a745 0% <%= (attempt.score / test.totalPoints) * 100 %>%, 
                                            #e9ecef <%= (attempt.score / test.totalPoints) * 100 %>% 100%
                                        );">
                                            <div class="text-center">
                                                <div><%= Math.round((attempt.score / test.totalPoints) * 100) %>%</div>
                                                <small><%= attempt.score %>/<%= test.totalPoints %></small>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <span class="badge <%= attempt.passed ? 'bg-success' : 'bg-danger' %> fs-6">
                                                <%= attempt.passed ? 'Passed' : 'Failed' %>
                                            </span>
                                        </div>
                                        <% if (!attempt.passed && test.passingPoints) { %>
                                            <p class="text-muted mt-1">
                                                Needed: <%= test.passingPoints %> points to pass
                                            </p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Calculate correct/incorrect counts -->
                <% 
                    const correctCount = attempt.questionResults.filter(q => q.isCorrect).length;
                    const incorrectCount = attempt.questionResults.filter(q => !q.isCorrect).length;
                %>

                <!-- Results Tabs -->
                <ul class="nav nav-tabs mt-4" id="resultsTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab">
                            <i class="fas fa-list me-2"></i>All Answers (<%= attempt.questionResults.length %>)
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="correct-tab" data-bs-toggle="tab" data-bs-target="#correct" type="button" role="tab">
                            <i class="fas fa-check-circle me-2"></i>Correct (<%= correctCount %>)
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="incorrect-tab" data-bs-toggle="tab" data-bs-target="#incorrect" type="button" role="tab">
                            <i class="fas fa-times-circle me-2"></i>Incorrect (<%= incorrectCount %>)
                        </button>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content mt-3" id="resultsTabContent">
                    <!-- All Answers Tab -->
                    <div class="tab-pane fade show active" id="all" role="tabpanel">
                        <% attempt.questionResults.forEach((question, index) => { %>
                            <div class="card question-card <%= question.isCorrect ? 'correct' : 'incorrect' %> mb-3">
                                <div class="card-header <%= question.isCorrect ? 'bg-success' : 'bg-danger' %> text-white d-flex justify-content-between align-items-center">
                                    <strong>Question <%= index + 1 %>: <%= question.isCorrect ? 'Correct' : 'Incorrect' %></strong>
                                    <span class="badge bg-light <%= question.isCorrect ? 'text-success' : 'text-danger' %>">
                                        <%= question.pointsEarned %>/<%= question.maxPoints %> points
                                    </span>
                                </div>
                                <div class="card-body">
                                    <p class="card-text"><strong>Question:</strong> <%= question.questionText %></p>
                                    <p class="card-text"><strong>Type:</strong> 
                                        <span class="badge bg-secondary text-capitalize"><%= question.questionType %></span>
                                    </p>
                                    
                                    <div class="mb-2">
                                        <strong>Your Answer:</strong>
                                        <span class="user-answer <%= question.isCorrect ? 'correct' : 'incorrect' %> p-2 rounded d-inline-block">
                                            <% if (Array.isArray(question.studentAnswer)) { %>
                                                <%= question.studentAnswer.join(', ') %>
                                            <% } else if (question.studentAnswer === null || question.studentAnswer === undefined || question.studentAnswer === '') { %>
                                                <em class="text-muted">No answer provided</em>
                                            <% } else { %>
                                                <%= question.studentAnswer %>
                                            <% } %>
                                        </span>
                                    </div>
                                    
                                    <div class="mb-2">
                                        <strong>Correct Answer:</strong>
                                        <span class="correct-answer p-2 rounded d-inline-block">
                                            <% if (Array.isArray(question.correctAnswer)) { %>
                                                <%= question.correctAnswer.join(', ') %>
                                            <% } else { %>
                                                <%= question.correctAnswer %>
                                            <% } %>
                                        </span>
                                    </div>

                                    <!-- Show feedback if available -->
                                    <% if (question.feedback && question.feedback.text) { %>
                                        <div class="alert <%= question.isCorrect ? 'alert-success' : 'alert-warning' %> mt-2">
                                            <i class="fas <%= question.isCorrect ? 'fa-check-circle' : 'fa-lightbulb' %> me-2"></i>
                                            <strong><%= question.isCorrect ? 'Great job!' : 'Study Tip:' %></strong> 
                                            <%= question.feedback.text %>
                                        </div>
                                    <% } else if (!question.isCorrect) { %>
                                        <div class="alert alert-warning mt-2">
                                            <i class="fas fa-lightbulb me-2"></i>
                                            <strong>Study Tip:</strong> Review this question and try to understand the correct answer.
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <!-- Correct Answers Tab -->
                    <div class="tab-pane fade" id="correct" role="tabpanel">
                        <% const correctQuestions = attempt.questionResults.filter(q => q.isCorrect); %>
                        <% if (correctQuestions.length === 0) { %>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                No correct answers to display.
                            </div>
                        <% } else { %>
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-2"></i>
                                You answered <%= correctQuestions.length %> questions correctly.
                            </div>
                            
                            <% correctQuestions.forEach((question, index) => { %>
                                <div class="card question-card correct mb-3">
                                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                                        <strong>Question <%= attempt.questionResults.findIndex(q => q._id === question._id) + 1 %>: Correct</strong>
                                        <span class="badge bg-light text-success">
                                            +<%= question.pointsEarned %> point<%= question.pointsEarned !== 1 ? 's' : '' %>
                                        </span>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text"><strong>Question:</strong> <%= question.questionText %></p>
                                        <div class="mb-2">
                                            <strong>Your Answer:</strong>
                                            <span class="user-answer correct p-2 rounded d-inline-block">
                                                <% if (Array.isArray(question.studentAnswer)) { %>
                                                    <%= question.studentAnswer.join(', ') %>
                                                <% } else { %>
                                                    <%= question.studentAnswer %>
                                                <% } %>
                                            </span>
                                        </div>
                                        <% if (question.feedback && question.feedback.text) { %>
                                            <div class="alert alert-success mt-2">
                                                <i class="fas fa-check-circle me-2"></i>
                                                <strong>Great job!</strong> <%= question.feedback.text %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>

                    <!-- Incorrect Answers Tab -->
                    <div class="tab-pane fade" id="incorrect" role="tabpanel">
                        <% const incorrectQuestions = attempt.questionResults.filter(q => !q.isCorrect); %>
                        <% if (incorrectQuestions.length === 0) { %>
                            <div class="alert alert-success">
                                <i class="fas fa-trophy me-2"></i>
                                Amazing! You got all questions correct!
                            </div>
                        <% } else { %>
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                You answered <%= incorrectQuestions.length %> questions incorrectly. Review these topics.
                            </div>
                            
                            <% incorrectQuestions.forEach((question, index) => { %>
                                <div class="card question-card incorrect mb-3">
                                    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                                        <strong>Question <%= attempt.questionResults.findIndex(q => q._id === question._id) + 1 %>: Incorrect</strong>
                                        <span class="badge bg-light text-danger">
                                            0/<%= question.maxPoints %> points
                                        </span>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text"><strong>Question:</strong> <%= question.questionText %></p>
                                        <p class="card-text"><strong>Type:</strong> 
                                            <span class="badge bg-secondary text-capitalize"><%= question.questionType %></span>
                                        </p>
                                        
                                        <div class="mb-2">
                                            <strong>Your Answer:</strong>
                                            <span class="user-answer incorrect p-2 rounded d-inline-block">
                                                <% if (Array.isArray(question.studentAnswer)) { %>
                                                    <%= question.studentAnswer.join(', ') %>
                                                <% } else if (question.studentAnswer === null || question.studentAnswer === undefined || question.studentAnswer === '') { %>
                                                    <em class="text-muted">No answer provided</em>
                                                <% } else { %>
                                                    <%= question.studentAnswer %>
                                                <% } %>
                                            </span>
                                        </div>
                                        
                                        <div class="mb-2">
                                            <strong>Correct Answer:</strong>
                                            <span class="correct-answer p-2 rounded d-inline-block">
                                                <% if (Array.isArray(question.correctAnswer)) { %>
                                                    <%= question.correctAnswer.join(', ') %>
                                                <% } else { %>
                                                    <%= question.correctAnswer %>
                                                <% } %>
                                            </span>
                                        </div>

                                        <!-- Show feedback if available -->
                                        <% if (question.feedback && question.feedback.text) { %>
                                            <div class="alert alert-warning mt-2">
                                                <i class="fas fa-lightbulb me-2"></i>
                                                <strong>Study Tip:</strong> <%= question.feedback.text %>
                                            </div>
                                        <% } else { %>
                                            <div class="alert alert-warning mt-2">
                                                <i class="fas fa-lightbulb me-2"></i>
                                                <strong>Study Tip:</strong> Review this question and try to understand why the correct answer is "<%= Array.isArray(question.correctAnswer) ? question.correctAnswer.join(', ') : question.correctAnswer %>".
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="row mt-4 mb-4">
                    <div class="col-12 text-center">
                        <a href="/student/dashboard" class="btn btn-primary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                        <% if (test.access === 'Public' || test.assignedSections.includes(user.section)) { %>
                            <a href="/student/take-test/<%= test._id %>?retake=true" class="btn btn-outline-success btn-lg ms-2">
                                <i class="fas fa-redo me-2"></i>Retake Test
                            </a>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>